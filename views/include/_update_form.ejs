
<form  method="POST" id="update_user">
  <div class="new_user">
   
    <div class="form-group">
      <label for="name" class="text-light"> Name </label>
      <input type="hidden" name="id" value="<%= user._id %>" />
      
      <input
        type="text"
        required
        name="name"
        value="<%= user.name %>"
        placeholder="Mark Stoenis"
      />
    </div>

    <div class="form-group">
      <label for="Email" class="text-light"> Email </label>
      <input
        type="text"
        name="email"
        value="<%= user.email %>"
        required
        placeholder="example@gmail.com"
      />
    </div>
    <div class="form-group">
      <label for="gender" class="text-light">Gender </label>
      <div class="radio inline">
        <input type="radio" id="gender-m" name="gender" value="Male" <%= user.gender == 'Male' ?'checked': ''  %> />
        <label for="gender-m" class="radio-label">Male</label>
        <input type="radio" id="gender-f" name="gender" value="Female" <%= user.gender == 'Female' ?'checked': ''  %>  />
        <label for="gender-f" class="radio-label">Female</label>
      </div>
    </div>
    <div class="form-group">
      <label for="gender" class="text-light">Status </label>
      <div class="radio inline">
        <input type="radio" id="s-active" name="status" value="Active"  <%= user.status == 'Active'? 'checked':"" %>/>

        <label for="s-active" class="radio-label">Active</label>
        <input type="radio" id="s-inactive" name="status" value="Inactive" <%= user.status == 'Inactive' ?"Checked":"" %>/>
        <label for="s-inactive" class="radio-label">Inactive</label>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
    
  </div>
</form>

